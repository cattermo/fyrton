  <div class="fyr_menu__overlay" id="fyr-menu-list">
    <button class="fyr_menu__close" aria-label="Stäng meny">✕</button>

    <ul class="fyr_menu__list fyr_menu__list--overlay">
      {% for item in site.pages %}
      <li class="fyr_menu__list-item">
